<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="modal-title">Sign In</h2>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
    </div>
    <div class="modal-body">
      <form id="sign-in" class="form-horizontal">
        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Email:</label>
          <div class="col-sm-10">
            <input class="form-control" name="credentials[email]" type="text" placeholder="Email" required />
          </div>
        </div>
        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Password:</label>
          <div class="col-sm-10">
            <input class="form-control" name="credentials[password]" type="password" placeholder="Password" required />
          </div>
        </div>
        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Retype Password:</label>
        </div>
        <input type="submit" class="btn btn-primary form-control" value="Submit!" />
      </form>
    </div>
    <div class="modal-footer">
      <span id="modal-message"></span>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
