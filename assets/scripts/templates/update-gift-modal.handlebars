<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="modal-title">Update Gift</h2>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
    </div>
    <div class="modal-body">
      <form id="update-gift" class="form-horizontal">


        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Nickname:</label>
          <div class="col-sm-10">
            <input class="form-control" name="gift[nickname]" type="text" placeholder="Nickname" value="{{gift.nickname}}" required />
          </div>
        </div>
        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Birthday:</label>
          <div class="col-sm-10">
            <input class="form-control" name="gift[dob]" type="date" value="{{gift.dob}}" required />
          </div>
        </div>
        <div class="form-group">
          <label class="hidden-xs col-sm-2 control-label">Gift Idea:</label>
          <div class="col-sm-10">
            <input class="form-control" name="gift[gift_idea]" type="text" placeholder="Gift Idea" value="{{gift.gift_idea}}" required />
          </div>
        </div>
        <input name="gift[id]" type="hidden" value="{{gift.id}}" />
        <input type="submit" class="btn btn-primary form-control" value="Update!" />



      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
